<Window x:Class="Biometrics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biometrics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10" Orientation="Vertical">
            <ComboBox 
                SelectionChanged="ComboBox_SelectionChanged"
                SelectedIndex="{Binding SelectedFile}"
                ItemsSource="{Binding Files}"/>
        </StackPanel>
        <Image 
            Grid.Column="1"
            x:Name="MainImg" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
    </Grid>
</Window>
